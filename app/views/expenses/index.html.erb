<div class="container">
  <div class="row">
    <div class="col-sm-6">
      <%= simple_form_for @expense do |f| %>
        <%= f.input :category_id, collection: Category.where(status: "Active"), prompt: "Pick a category" %>
        <%= f.input :amount %>
        <%= f.input :date %>
        <%= f.input :receipt %>
        <%= f.input :receipt_cache, as: :hidden %>
        <%= f.submit %>
      <% end %>
    </div>
    <div class="col-sm-6">
      <% if params[:scope] == "company" %>
        <%= link_to "My expenses", expenses_path %>
      <% else %>
       <%= link_to "Company", expenses_path(scope: "company") %>
      <% end %>
      <table class="table">
          <thead>
            <tr>
              <th>Name</th>
              <th>Date</th>
              <th>Amount</th>
              <th>Category</th>
            </tr>
          </thead>
          <tbody>
              <% @expenses.each do |c| %>
                <tr>
                <td><p><%= c.user.first_name %> <%= c.user.last_name %></p></td>
                <td><p><%= c.date %><p></td>
                <td><p><%= humanized_money_with_symbol(c.amount) %><p></td>
                <td><p><%= c.category.name %><p></td>
              <% end %>
          </tbody>
        </table>
        <% if params[:all] != "true" %>
        <%= link_to "Previous Cycle", expenses_path(scope: params[:scope], month: @previous_month, year: @previous_year) %>
        <%= link_to "Next Cycle", expenses_path(scope: params[:scope], month: @next_month, year: @next_year ) %>
        <%= link_to "Current Cycle", expenses_path(scope: params[:scope]) %>
        <%= link_to "All Time", expenses_path(scope: params[:scope], all: "true") %>
        <% else %>
        <%= link_to "Current Cycle", expenses_path(scope: params[:scope]) %>
        <% end %>
    </div>
  </div>
</div>

<%= link_to "Export", expenses_path(format: :pdf, scope: params[:scope], month: params[:month], year: params[:year], all: params[:all]) %>


