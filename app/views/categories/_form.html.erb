<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <%= simple_form_for @category do |f| %>
        <%= f.input :name %>
        <%= f.input :status, input_html: { value: 'Active' }, as: :hidden %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>
