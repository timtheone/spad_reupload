<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <div class="box-outter">
        <div class="box-inner">
          <%= simple_form_for @category do |f| %>
            <%= f.input :name, label: "Category name" %>
            <%= f.input :status, input_html: { value: 'Active' }, as: :hidden %>

            <div class="form-actions">
             <%= f.submit class: "btn-spad" %>
             <%= link_to "Cancel", :back, class: "btn-spad-cancel" %>
           </div>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

